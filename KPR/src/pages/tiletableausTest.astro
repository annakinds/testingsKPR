---
import "../styles/reset.css";
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import tile from "../assets/tiletableau.png";
---

<Layout>
    <div class="peel-container">
        <div class="peel-rect">
            <div class="peel-fold">
                <h1 class="start__title">
                    What is hiding behind the labels of Tile Tableaus?
                </h1>
                <Image
                    class="image"
                    src={tile}
                    alt="Tile tableau from Aalbeke"
                />
                <p class="start__cta">Shake the labels off</p>

                <div class="corner-square"></div>
            </div>
        </div>

        <div class="content">
            <Image class="image" src={tile} alt="Tile tableau from Aalbeke" />
            <p class="start__title">
                What is hiding behind the labels of Tile Tableaus?
            </p>
        </div>
    </div>
</Layout>

<style>
    .start__title {
        color: var(--white);
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
    }

    .start__cta {
        color: var(--white);
        text-align: center;
        font-size: 1.25rem;
        margin-top: 5rem;
    }

    .peel-container {
        position: relative;
        width: 100%;
        height: 100vh; /* only viewport height */
        overflow: hidden; /* prevent actual scrolling */
        background: var(--primary-color);
        perspective: 1500px;
    }

    .content {
        position: relative;
        z-index: 1;
        padding: 4rem 2rem;
        color: var(--white);
    }

    .image {
        display: block;
        max-width: 28rem;
        width: 90%;
        margin: 2rem auto;
        border: 0.5rem solid var(--white);
    }

    .peel-rect {
        position: absolute;
        inset: 0;
        z-index: 30;
        transform-style: preserve-3d;
    }

    .peel-fold {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--black);
        transform-origin: bottom right;
        z-index: 30;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding-top: 4rem;
        backface-visibility: hidden;
        will-change: transform;
    }

    .peel-fold::after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
            90deg,
            rgba(255, 255, 255, 0.03),
            rgba(0, 0, 0, 0.05)
        );
        transform: translateZ(-1px);
    }

    .corner-square {
        position: absolute;
        bottom: 0; /* move to bottom */
        right: 0; /* keep right-aligned */
        width: 5rem;
        height: 5rem;
        background: linear-gradient(
            to top left,
            var(--primary-color) 50%,
            var(--secondary-color) 50%
        );
        clip-path: polygon(100% 0, 0 100%, 100% 100%);
        transform-origin: bottom right;
        pointer-events: none;
        box-shadow: 0 0 0 rgba(0, 0, 0, 0);
        z-index: 999;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
